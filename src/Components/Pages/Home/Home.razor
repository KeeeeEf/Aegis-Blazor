        class="grid grid-cols-6 w-full h-28 place-content-center lg:h-[28rem] lg:w-[13rem] lg:grid-cols-1 lg:grid-rows-6 text-base">
        @for (int i = 0; i < Quarters.Count; i++)
        {
            Timeline quarter = Quarters[i];
            <li class="w-full h-full cursor-pointer group grid grid-rows-2 lg:grid-cols-[2fr_1fr] lg:grid-rows-1"
                @onmouseover="@(() => HoveredQuarter = $"{quarter.Year} | {quarter.Quarter}")"
                @onmouseleave="@(() => HoveredQuarter = "2024 | Q1")">
                <div class="w-full h-full flex justify-center items-center lg:justify-end">
                    <span class="transition-all lg:hidden @GetHoverClass(quarter)">@quarter.Quarter</span>
                    <span class="@GetHoverClass(quarter) hidden transition-all lg:block">
                        @quarter.Year | @quarter.Quarter
                    </span>
                </div>
                <div class="relative flex flex-col items-center gap-y-4 w-full h-full lg:!justify-center">
                    <div
                        class="circle relative z-20 h-2 w-2 rounded-full sm:h-4 sm:w-4 @((HoveredQuarter == $"{quarter.Year} | {quarter.Quarter}" ? "scale-[200%] duration-300 bg-[#0033AD]" : "bg-[#D9D9D9]"))" />
                    @if (i < Quarters.Count - 1)
                    {
                        <div
                            class="absolute z-10 w-full h-[0.05rem] mt-1 sm:mt-2 left-1/2 lg:mt-0 lg:w-[0.05rem] lg:h-full lg:top-1/2 bg-[#D9D9D9]" />
                    }
                    <span class="transition-all lg:hidden @GetHoverClass(quarter)">
                        @quarter.Year
                    </span>
                </div>
            </li>
        }
    </ul>
