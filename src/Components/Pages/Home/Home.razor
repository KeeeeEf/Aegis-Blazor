                        <h6 class="text-base w-[calc(100%-10rem)] font-bold md:text-xl">
                            @datum.value.Name
                        </h6>
                        <p class="text-sm w-24 font-light ml-4 md:text-base">
                            Tokens
                        </p>
                        <p class="text-sm w-[calc(100%-7rem)] font-light md:text-base">
                            @datum.value.Description
                        </p>
                        <span class="text-sm w-24 ml-4 font-light md:text-base">
                            @datum.value.Amount
                        </span>
                    </li>
                    @if (datum.index < TokenomicList.Count - 1)
                    {
                        <MudDivider Class="bg-[#2f55b7] h-[2px]" />
                    }
                }
            </ul>
        </div>
    </MudPaper>
