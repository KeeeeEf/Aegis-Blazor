                    style="aspect-ratio: 1;">
                    <h4 class="text-1xl font-semibold md:text-2xl">
                        Total Supply
                    </h4>
                    <h3 class="text-2xl font-bold md:text-3xl">10,000,000,000</h3>
                    <span class="text-base font-light md:text-lg">Tokens</span>
                </div>
            </div>
            <ul class="w-[calc(90%-5vw)] mx-auto md:w-[90%] lg:px-0 lg:w-[calc(32%)] lg:mx-[6%] text-black">
                @foreach (var datum in TokenomicList.Select((value, index) => new { value, index }))
                {
                    <li class="flex flex-wrap justify-between gap-y-4 pt-4 pb-4">
                        <h6 class="text-base w-12 font-bold md:text-xl" style="color: @datum.value.Color">
