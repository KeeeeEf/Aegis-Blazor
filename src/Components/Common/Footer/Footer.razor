@inherits LayoutComponentBase
@namespace Aegis.Web.Components.Common
@using Aegis.Web.Components.Layout

<footer class="bg-[#000F33] text-[var(--mud-palette-white)]">
    <article
        class="container flex flex-wrap justify-center gap-9 py-12 max-w-screen-xl md:justify-between md:items-start">
        <div class="w-[60%] flex flex-col items-center gap-y-6 md:w-1/5">
            <MudImage Src="/images/icons/aegis-light-logo.png" Alt="aegis icon" Class="h-full" />
            <div class="flex gap-3 w-full justify-center">
                <MudImage Src="/images/icons/facebook-icon.png" Alt="facebook icon" Class="h-12 w-12" />
                <div class="h-12 w-12 rounded-full flex items-center justify-center bg-[#182749]">
                    <MudIcon Icon="@Icons.Custom.Brands.X" class="w-4 h-4" />
                </div>
                <MudImage Src="/images/icons/discord-icon.png" Alt="discord icon" class="h-12 w-12" />
            </div>
        </div>
        <ul class="w-[35%] flex flex-col gap-2 md:pl-[5%] md:w-1/5">
            <MudText class="flex justify-normal text-lg font-medium md:text-xl">
                PRODUCT
            </MudText>
            <li class="flex gap-2 items-center justify-normal">
                <span class="text-base font-light md:text-lg">Features</span>
                <MudImage src="/images/icons/arrow-up-right.svg" Class="h-4 w-3 object-contain" alt="facebook icon" />
            </li>
            <li class="flex gap-2 items-center justify-normal">
                <span class="text-base font-light md:text-lg md:block md:w-16 xl:inline xl:w-auto">
                    How It Works
                </span>
                <MudImage src="/images/icons/arrow-up-right.svg" Class="h-4 w-3 object-contain" alt="facebook icon" />
            </li>
        </ul>
        <ul class="w-[36%] text-right flex flex-col gap-2 md:text-left md:pl-[5%] md:flex-1 md:w-1/5">
            <MudText class="text-lg font-medium md:text-xl">
                COMPANY
            </MudText>
            <li class="flex gap-2 items-center justify-end md:!justify-normal">
                <span class="text-base font-light md:text-lg">About Us</span>
                <MudImage src="/images/icons/arrow-up-right.svg" class="h-4 w-3 object-contain" alt="facebook icon" />
            </li>
        </ul>
        <MudButton
            Variant="Variant.Filled"
            Class="animate-rotate-border !font-normal !normal-case !rounded-full w-[150px] h-[45px] text-[var(--mud-palette-white)] !p-[2px]"
            Style="background: conic-gradient(from var(--border-angle), transparent 25%, var(--mud-palette-info-lighten), var(--mud-palette-info) 99%, transparent)"
        >
            <div class="flex w-[145px] h-[40px] text-base font-medium rounded-full bg-[#000F33] items-center justify-center py-[5px] px-[1px] xs:px-[10px]">
                OPEN APP
            </div>
        </MudButton>
    </article>
    <div class="border-t bg-white opacity-30" />
    <article class="container max-w-screen-xl w-full px-[min(7.5vw,96px)] flex justify-between gap-12 py-12 opacity-30">
        <span class="text-sm md:text-base">AEGIS, 2024</span>
        <span class="flex-1 text-right text-sm md:text-base">
            Terms & Conditions
        </span>
        <span class="text-sm md:text-base">Privacy Policy</span>
    </article>
</footer>