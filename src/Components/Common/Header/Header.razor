@namespace Aegis.Web.Components.Common

<header class="container z-20 py-8 flex justify-between items-center max-w-screen-xl lg:py-16 2xl:h-auto">
    <img src="@((IsDarkMode ? "/images/icons/aegis-dark-logo.png" : "/images/icons/aegis-light-logo.png"))"
        alt="aegis logo" className="h-full" />
    <ul class="hidden gap-12 items-center lg:flex">
        <MudText class="relative cursor-pointer text-base text-[var(--mud-palette-white)] font-medium 
           after:absolute after:content-[''] 
           after:bg-gradient-to-r after:from-[var(--mud-palette-info-lighten)] after:via-[var(--mud-palette-info)] after:to-[var(--mud-palette-info-darken)]
           after:w-0 after:h-[0.1rem] after:-bottom-3 after:left-1/2 after:-translate-x-1/2 
           after:transition-all after:duration-300 hover:after:w-[calc(100%+3rem)]">
            HOME
        </MudText>
        <MudText class="relative cursor-pointer text-base text-[var(--mud-palette-white)] font-medium 
           after:absolute after:content-[''] 
           after:bg-gradient-to-r after:from-[var(--mud-palette-info-lighten)] after:via-[var(--mud-palette-info)] after:to-[var(--mud-palette-info-darken)]
           after:w-0 after:h-[0.1rem] after:-bottom-3 after:left-1/2 after:-translate-x-1/2 
           after:transition-all after:duration-300 hover:after:w-[calc(100%+3rem)]">
            ABOUT US
        </MudText>
        <MudText class="relative cursor-pointer text-base text-[var(--mud-palette-white)] font-medium 
           after:absolute after:content-[''] 
           after:bg-gradient-to-r after:from-[var(--mud-palette-info-lighten)] after:via-[var(--mud-palette-info)] after:to-[var(--mud-palette-info-darken)]
           after:w-0 after:h-[0.1rem] after:-bottom-3 after:left-1/2 after:-translate-x-1/2 
           after:transition-all after:duration-300 hover:after:w-[calc(100%+3rem)]">
            HOW IT WORKS
        </MudText>
    </ul>
    <MudButton Variant="Variant.Filled"
        Class="animate-rotate-border !font-normal !normal-case !rounded-full w-[150px] h-[45px] text-[var(--mud-palette-white)] !p-[2px] hidden lg:block"
        Style="background: conic-gradient(from var(--border-angle), transparent 25%, var(--mud-palette-info-lighten), var(--mud-palette-info) 99%, transparent)">
        <div
            class="flex w-[145px] h-[40px] text-base font-medium rounded-full bg-[var(--mud-palette-primary)] items-center justify-center py-[5px] px-[1px] xs:px-[10px]">
            OPEN APP
        </div>
    </MudButton>
    <MudIcon Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" @onclick="() => ToggleDrawer()"
        class="block z-20 cursor-pointer lg:hidden" Style="color: var(--mud-palette-white);" />
</header>


<MudDrawer @bind-Open="@_open" Overlay="true" Elevation="1" Variant="@DrawerVariant.Responsive" Anchor="Anchor.End"
    class="fixed -mt-[calc(4rem+50px)] bg-[var(--mud-palette-primary)] lg:hidden">
    <MudDrawerHeader class="pt-10 px-4 py-4 flex justify-end">
        <MudIcon Icon="@Icons.Material.Filled.Close" Title="Close" @onclick="() => ToggleDrawer()"
            class="cursor-pointer" Style="color: var(--mud-palette-white);" />
    </MudDrawerHeader>
    <MudNavMenu class="px-4 bg-[var(--mud-palette-primary)]">
        <MudText class="mt-4 cursor-pointer text-base text-[var(--mud-palette-white)] font-medium">HOME</MudText>
        <MudText class="mt-4 cursor-pointer text-base text-[var(--mud-palette-white)] font-medium">HOW IT WORKS
        </MudText>
        <MudText class="mt-4 cursor-pointer text-base text-[var(--mud-palette-white)] font-medium">ABOUT US</MudText>
        <MudButton Variant="Variant.Filled"
            Class="mt-4 animate-rotate-border !font-normal !normal-case !rounded-md w-full h-[45px] text-[var(--mud-palette-white)] !p-[2px]"
            Style="background: conic-gradient(from var(--border-angle), transparent 25%, var(--mud-palette-info-lighten), var(--mud-palette-info) 99%, transparent)">
            <div
                class="flex h-[40px] w-full text-base font-medium rounded-md bg-[var(--mud-palette-primary)] items-center justify-center py-[5px] px-[1px] xs:px-[10px]">
                OPEN APP
            </div>
        </MudButton>
    </MudNavMenu>
</MudDrawer>
